@inherits RazorEngineCore.RazorEngineTemplateBase<RazorEngine.Mailing.Library.Models.IMailViewModel>

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@Model.MailInfo.Subject</title>

    @Include("stylesheet", Model)
</head>


<body>
    <table class="table-mail-container" align="center" width="600" cellpadding="0" cellspacing="0">
        <tbody>
            <tr>
                <td vAlign="top" rowspan="1" colspan="1">
                    <table class="table-mail-content" cellpadding="0" cellspacing="0" border="0">
                        <tbody>
                            <tr>
                                <td>
                                    @if (Model.MailInfo.UseHeaderForApplicationScope)
                                    {
                                        @Include("headerForApplicationScope", Model.MailInfo.ApplicationScope)
                                    }
                                    else
                                    {
                                        @Include("header", Model)
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <table align="center" class="table-mail-body">
                                        <tbody>
                                            <tr>
                                                <td>
                                                    @RenderBody()
                                                    
                                                    @Include("greeting", @Model.MailInfo.TemplateLanguageCode)
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <td vAlign="top" rowspan="1" colspan="1">
                    <table class="table-mail-footer" cellpadding="0" cellspacing="0" border="0">
                        <tbody>
                            <tr>
                                <td>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
</body>
</html>