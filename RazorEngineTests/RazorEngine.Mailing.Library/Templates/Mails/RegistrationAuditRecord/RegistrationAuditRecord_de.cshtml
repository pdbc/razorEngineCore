@using RazorEngine.Mailing.Library.Models

@inherits RazorEngineCore.RazorEngineTemplateBase<RazorEngine.Mailing.Library.Models.AuditProfileViewModel>

@{
    Layout = "layout";
}

<!-- Header -->
<table align="center" width="100%" cellspacing="0" cellpadding="0">
    <tbody>
        <tr>
            <td style="text-align: center;">
                <p class="mail-title">Glückwunsch!</p>
                <p class="mail-subtitle">Dein neues SD Worx-Konto wurde erstellt</p>
            </td>
        </tr>
    </tbody>
</table>

<!-- Action -->
<table width="100%" cellspacing="0" cellpadding="0">
    <tbody>
        <tr>
            <td class="border-secondary">
                <p class="text-secondary">
                    <strong>Ab jetzt kannst Du Dich mit:</strong>
                </p>
                <ul>
                    <li class="text-secondary"><span class="blurrable">@Model.EmailAddress</span></li>
                    <li>das von Ihnen gewählte Passwort</li>
                </ul>
            </td>
        </tr>
        <tr>
            <td class="border-padding">
                <p>
                    <strong>Deine Daten:</strong>
                </p>
                <ul class="mail-unordered-list">
                    <li>Vorname: <span class="blurrable">@Model.Firstname</span></li>
                    <li>Nachname: <span class="blurrable">@Model.Lastname</span></li>
                    <li>Geburtsdatum: <span class="blurrable">@Model.DateOfBirth</span></li>
                    <li>E-Mail-Adresse: <span class="blurrable">@Model.EmailAddress</span></li>
                    @if (Model.HasMobileNumber)
                    {
                    <li>Mobiltelefon: <span class="blurrable">+@Model.MobileNumberPrefix@Model.MobileNumber</span></li>
                    }
                    @if (Model.HasRecoveryEmailAddresses)
                    {
                        <li>
                            E-Mail-Adressen für Wiederherstellung (nicht zum einloggen verwendbar):
                            <ul>
                                @foreach (var recoveryEmailAddress in Model.RecoveryEmailAddresses)
                                {
                                    <li><span class="blurrable">@recoveryEmailAddress</span></li>
                                }
                            </ul>
                        </li>
                    }
                </ul>
            </td>
        </tr>
    </tbody>
</table>

<p>Wenn Deine Daten nicht korrekt sind, ändere sie auf der Konto-Seite.</p>
