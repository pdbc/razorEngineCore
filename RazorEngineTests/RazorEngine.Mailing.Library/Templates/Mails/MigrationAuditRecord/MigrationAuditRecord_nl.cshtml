@using RazorEngine.Mailing.Library.Models

@inherits RazorEngineCore.RazorEngineTemplateBase<RazorEngine.Mailing.Library.Models.AuditProfileViewModel>

@{
    Layout = "layout";
}

<!-- Header -->
<table align="center" width="100%" cellspacing="0" cellpadding="0">
    <tbody>
        <tr>
            <td style="text-align: center;">
                <p class="mail-title">Proficiat!</p>
                <p class="mail-subtitle">Je nieuwe SD Worx-account is succesvol aangemaakt</p>
            </td>
        </tr>
    </tbody>
</table>

<!-- Action -->
<table width="100%" cellspacing="0" cellpadding="0">
    <tbody>
        <tr>
            <td class="border-secondary">
                <p class="text-secondary">
                    <strong>Je kan je voortaan aanmelden met:</strong>
                </p>
                <ul>
                    <li class="text-secondary"><span class="blurrable">@Model.EmailAddress</span></li>
                    <li>je zelf gekozen wachtwoord</li>
                </ul>
            </td>
        </tr>
        <tr>
            <td class="border-padding">
                <p>
                    <strong>Je gegevens:</strong>
                </p>
                <ul class="mail-unordered-list">
                    <li>Voornaam: <span class="blurrable">@Model.Firstname</span></li>
                    <li>Achternaam: <span class="blurrable">@Model.Lastname</span></li>
                    <li>Geboortedatum: <span class="blurrable">@Model.DateOfBirth</span></li>
                    <li>E-mailadres: <span class="blurrable">@Model.EmailAddress</span></li>
                    @if (Model.HasMobileNumber)
                    {
                        <li>Mobiel nummer: <span class="blurrable">+@Model.MobileNumberPrefix@Model.MobileNumber</span></li>
                    }
                    @if (Model.HasRecoveryEmailAddresses)
                    {
                        <li>
                            Herstel e-mailadressen (niet bruikbaar voor login):
                            <ul>
                                @foreach (var recoveryEmailAddress in Model.RecoveryEmailAddresses)
                                {
                                    <li><span class="blurrable">@recoveryEmailAddress</span></li>
                                }
                            </ul>
                        </li>
                    }
                </ul>
            </td>
        </tr>
    </tbody>
</table>

<p>Als je gegevens niet correct zijn, ga naar je "Account"-pagina om ze te wijzigen.</p>