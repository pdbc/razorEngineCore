@using RazorEngine.Mailing.Library.Models

@inherits RazorEngineCore.RazorEngineTemplateBase<RazorEngine.Mailing.Library.Models.AuditProfileViewModel>

@{
    Layout = "layout";
}

<!-- Header -->
<table align="center" width="100%" cellspacing="0" cellpadding="0">
    <tbody>
        <tr>
            <td style="text-align: center;">
                <p class="mail-title">Félicitations!</p>
                <p class="mail-subtitle">Votre nouveau compte SD Worx a été créé avec succès</p>
            </td>
        </tr>
    </tbody>
</table>

<!-- Action -->
<table width="100%" cellspacing="0" cellpadding="0">
    <tbody>
        <tr>
            <td class="border-secondary">
                <p class="text-secondary">
                    <strong>Vous pouvez désormais vous connecter avec:</strong>
                </p>
                <ul>
                    <li class="text-secondary"><span class="blurrable">@Model.EmailAddress</span></li>
                    <li>le mot de passe que vous avez choisi</li>
                </ul>
            </td>
        </tr>
        <tr>
            <td class="border-padding">
                <p>
                    <strong>Vos données :</strong>
                </p>
                <ul class="mail-unordered-list">
                    <li>Prénom: <span class="blurrable">@Model.Firstname</span></li>
                    <li>Nom: <span class="blurrable">@Model.Lastname</span></li>
                    <li>Date de naissance: <span class="blurrable">@Model.DateOfBirth</span></li>
                    <li>Adresse e-mail: <span class="blurrable">@Model.EmailAddress</span></li>
                    @if (Model.HasMobileNumber)
                    {
                        <li>Téléphone mobile: <span class="blurrable">+@Model.MobileNumberPrefix@Model.MobileNumber</span></li>
                    }
                    @if (Model.HasRecoveryEmailAddresses)
                    {
                        <li>
                            Récupération d'adresses e-mail (non utilisable pour la connexion):
                            <ul>
                                @foreach (var recoveryEmailAddress in Model.RecoveryEmailAddresses)
                                {
                                    <li><span class="blurrable">@recoveryEmailAddress</span></li>
                                }
                            </ul>
                        </li>
                    }
                </ul>
            </td>
        </tr>
    </tbody>
</table>


<p>Si vos données sont incorrectes, rendez-vous sur votre page « Compte » pour les modifier.</p>
